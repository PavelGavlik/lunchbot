{
    "compilerOptions": {
        "allowJs": true,
        "skipLibCheck": false,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "ES2020",
        "target": "ES2020",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "lib": [
            "esnext"
        ],
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "ts-node": {
      "esm": true
    }
}
